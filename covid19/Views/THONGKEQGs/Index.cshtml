@model IEnumerable<covid19.Models.THONGKEQG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Bố cục trang web Bootstrap 4 --- dammio.com</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            .fakeimg {
                height: 200px;
                background: #aaa;
            }
            table.scrolldown {
                width: 100%;
                /* border-collapse: collapse; */
                border-spacing: 0;
                border: 2px solid black;
            }

                /* To display the block as level element */
                table.scrolldown tbody, table.scrolldown thead {
                    display: block;
                }

            thead tr th {
                height: 40px;
                line-height: 40px;
                text-align:center
            }

            table.scrolldown tbody {
                /* Set the height of table body */
                height: 500px;
                /* Set vertical scroll */
                overflow-y: auto;
                /* Hide the horizontal scroll */
                overflow-x: hidden;
            }

            tbody {
                border-top: 2px solid black;
            }

                tbody td, thead th {
                    width: 200px;
                    border-right: 2px solid black;
                    border-bottom: 2px solid black;
                    text-align: center
                }

            td {
                text-align: center;
            }
            th {
                text-align: center;
                border-right: 2px solid black;
                border-bottom: 2px solid black
            }
            table, tr, td {
                border: hidden;
            }
            .table-striped tbody tr:nth-child(odd) td {
                background-color: gainsboro;
            }

            .table-striped tbody tr:nth-child(even) td {
                background-color: whitesmoke;
            }
        </style>
    </head>
    <body>

        <div class="container">

            <!-- Phần header website -->
            <div class="jumbotron text-center" style="margin-bottom:0">
                <h1>COVID-19</h1>
            </div>
            <!-- Kết thúc phần header website -->
            <!-- Phần nội dung chính -->
            <div class="row">
                <!-- Cột trái -->
                <div class="col-sm-4" style="height:168px">
                    <h2 style="text-align:center;color:white">Thế giới</h2>
                    <div class="col-sm-4">
                        <div style="padding:5px 0px 5px 0px">
                            <div style="border:hidden; border-right:hidden; background-color:red; color:white;text-align:center;font-size:20px;">
                                Tổng số ca nhiễm
                            </div>
                        </div>
                        <div style="padding:5px 0px 5px 0px">
                            <div style="border:hidden; border-right:hidden; background-color:darkslategray; color:white; text-align:center;font-size:20px;">
                                Tổng số ca chết
                            </div>
                        </div>
                        <div style="padding:5px 0px 5px 0px">
                            <div style="border:hidden; border-right:hidden; background-color:forestgreen; color:white;text-align:center;font-size:20px;">
                                Tổng số ca khỏi
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        @foreach (var item in ViewBag.tg)
                        {
                            <div style="font:bold 20px arial;color:white">
                                <div class="row" style="text-align:left;height:66px;width: 50%; padding: 22px 0px 0px 0px;">
                                    @item.TONGSOCAMAC
                                </div>
                                <div class="row" style="text-align:left;height:66px;width: 50%; padding: 22px 0px 0px 0px;">
                                    @item.TONGSOCACHET
                                </div>
                                <div class="row" style="text-align:left;height:66px;width: 50%; padding: 22px 0px 0px 0px;">
                                    @item.TONGSOCAKHOI
                                </div>
                            </div>
                        }
                    </div>
                        <hr class="d-sm-none">
                    </div>
                    <!-- Kết thúc cột trái -->
                    <!-- Cột phải -->
                    <div class="col-sm-8" style="border:hidden">
                        <h2 style="text-align:center;color:white">Tình hình các quốc gia</h2>
                        <table class="scrolldown table-striped" style="border:hidden;color:black;">
                            <tr style="text-align:center;border-right:hidden">
                                <th>
                                    Quốc gia
                                </th>
                                <th>
                                    Tổng số ca mắc
                                </th>
                                <th>
                                    Tổng số ca chết
                                </th>
                                <th>
                                    Tổng số ca khỏi
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in ViewBag.qg)
                             {
                                <tr>
                                    <td style="text-align:left">
                                        <img src="https://www.countryflags.io/@item.MAQG/flat/24.png">
                                        @item.QUOCGIA.TENQG
                                    </td>
                                    <td style="border-width:thin">
                                        @item.TONGSOCAMAC
                                    </td>
                                    <td style="border-width:thin">
                                        @item.TONGSOCACHET
                                    </td>
                                    <td style="border-right:hidden;border-width:thin">
                                        @item.TONGSOCAKHOI
                                    </td>
                                </tr>
                             }
                        </table>
                    </div>
                    <!-- Kết thúc cột phải -->

                </div>
        </div>
        <div style="padding-top:50px"></div>
        <table class="table-striped" style="display:block;margin-left:auto;margin-right:auto;width:80%">
                @foreach (var item in ViewBag.tt)
                {
                    <tr style="border-bottom:2px solid black; padding-top:15px">
                        <td class="col-md-8" style="border:hidden;padding-top:15px;text-align:left">
                            <div>
                                <div>
                                    <h3 class="title-news"><a data-medium="Item-1" data-thumb="1" title="@item.TIEUDE" href="@item.LINK">@item.TIEUDE</a></h3>
                                    <p class="description"><a data-medium="Item-1" data-thumb="1" title="@item.TIEUDE" href="@item.LINK"><span class="location-stamp"></span>@item.MOTA</a></p>
                                    <p class="meta-news">
                                        <span class="time-public"><span>@item.NGAYCAPNHAT</span></span>
                                        <span class="cate_top_1003819"></span>
                                    </p>
                                </div>
                        </td>
                        <td class="col-md-4" style="padding-top:15px;border:2px solid black">
                            <div>
                                <img itemprop="contentUrl" style="height:100px;" loading="lazy" intrinsicsize="500x300" class="" src="@item.IMG" data-ll-status="loaded">
                            </div>
                        </td>
                    </tr>
                }
        </table>
