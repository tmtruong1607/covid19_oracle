                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in ViewBag.qg)
                             {
                                <tr>
                                    <td>
                                        <img src="https://www.countryflags.io/@item.MAQG/flat/24.png">
                                        @item.QUOCGIA.TENQG
                                    </td>
                                    <td style="border-width:thin">
                                        @item.TONGSOCAMAC
                                    </td>
                                    <td style="border-width:thin">
                                        @item.TONGSOCACHET
                                    </td>
                                    <td style="border-right:hidden;border-width:thin">
                                        @item.TONGSOCAKHOI
                                    </td>
                                </tr>
                             }
                        </table>
                    </div>
                    <!-- Kết thúc cột phải -->

                </div>
        </div>
        <div>
            <div class="col-left col-left-subfolder">
                <div class="width_common list-news-subfolder" id="list-news">
                    @foreach (var item in ViewBag.tt)
                    {
                        <article class="item-news item-news-common" data-publishtime="1593160110">
                            <div class="thumb-art">
                                <a data-medium="Item-1" data-thumb="1" href="https://vnexpress.net/nhung-cai-om-cuu-sinh-qua-lop-nilon-4121568.html" title="Những cái ôm 'cứu sinh' qua lớp nilon" class="thumb thumb-5x3" data-itm-source="#vn_source=&amp;vn_campaign=Stream&amp;vn_medium=Item-1&amp;vn_term=Desktop&amp;vn_thumb=1" data-itm-added="1">
