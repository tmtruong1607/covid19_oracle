            <!-- Kết thúc phần header website -->
            <!-- Phần nội dung chính -->
            <div class="row">

                <!-- Cột trái -->

                <div class="col-sm-4" style="height:168px">
                    <h2 style="text-align:center">Thế giới</h2>
                    <div class="col-sm-4">
                        <div style="padding:5px 0px 5px 0px">
                            <div style="border:hidden; border-right:hidden; background-color:red; color:white;text-align:center;font-size:20px;">
                                Tổng số ca nhiễm
                            </div>
                        </div>
                        <div style="padding:5px 0px 5px 0px">
                            <div style="border:hidden; border-right:hidden; background-color:darkslategray; color:white; text-align:center;font-size:20px;">
                                Tổng số ca chết
                            </div>
                        </div>
                        <div style="padding:5px 0px 5px 0px">
                            <div style="border:hidden; border-right:hidden; background-color:forestgreen; color:white;text-align:center;font-size:20px;">
                                Tổng số ca khỏi
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        @foreach (var item in ViewBag.tg)
                        {
                            <div style="font:bold 20px arial">
                                <div class="row" style="text-align:left;height:66px;width: 50%; padding: 22px 0px 0px 0px;">
                                    @item.TONGSOCAMAC
                                </div>
                                <div class="row" style="text-align:left;height:66px;width: 50%; padding: 22px 0px 0px 0px;">
                                    @item.TONGSOCACHET
                                </div>
                                <div class="row" style="text-align:left;height:66px;width: 50%; padding: 22px 0px 0px 0px;">
                                    @item.TONGSOCAKHOI
                                </div>
                            </div>
                        }
                    </div>
